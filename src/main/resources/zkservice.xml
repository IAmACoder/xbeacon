<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="treemgr" class="org.jocean.xbeacon.zk.ZKTreeManager"
        init-method="start"
        destroy-method="stop">
        <constructor-arg name="zkagent" ref="zkAgent"/>
        <property name="root" value="${managed.root.path:/}"/>
        <property name="webapp">
            <bean class="org.jocean.xbeacon.MyWebAppInit" 
                factory-method="getWebapp"/>
        </property>
    </bean>
    
    <bean id="servicemonitor" class="org.jocean.xbeacon.jmxui.ServiceMonitor"
        init-method="start"
        destroy-method="stop">
        <constructor-arg name="zkagent" ref="zkAgent"/>
        <property name="root" value="${service.status.path:/service}"/>
        <property name="webapp">
            <bean class="org.jocean.xbeacon.MyWebAppInit" 
                factory-method="getWebapp"/>
        </property>
    </bean>
    
</beans>
